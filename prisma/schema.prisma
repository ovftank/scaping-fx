generator client {
  provider     = "prisma-client"
  output       = "../lib/generated/prisma"
  moduleFormat = "esm"
  runtime      = "nodejs"
}

datasource db {
  provider = "sqlite"
}

enum Role {
  USER
  ADMIN
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  role      Role     @default(USER)
  active    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Price {
  id          Int      @id @default(autoincrement())
  timestamp   Int      @unique
  time        String
  date        String
  type        String
  name        String
  buy         Float
  sell        Float
  change_buy  Float
  change_sell Float
  createdAt   DateTime @default(now())

  @@index([type])
  @@index([date])
}
